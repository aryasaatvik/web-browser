{
  "name": "web-browser-mcp",
  "version": "0.1.0",
  "description": "MCP server for browser automation via Chrome extension",
  "type": "module",
  "private": true,
  "packageManager": "bun@1.3.6",
  "workspaces": ["packages/*"],
  "scripts": {
    "build": "turbo run build",
    "build:core": "turbo run build --filter=@web-browser/core",
    "build:native-host": "turbo run build --filter=@web-browser/native-host",
    "build:extension": "turbo run build --filter=@web-browser/extension",
    "dev": "turbo run dev",
    "dev:extension": "turbo run dev --filter=@web-browser/extension",
    "typecheck": "turbo run typecheck",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "install:native": "./scripts/install.sh",
    "uninstall:native": "./scripts/install.sh --uninstall"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "happy-dom": "^20.4.0",
    "turbo": "^2.8.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.18"
  }
}
